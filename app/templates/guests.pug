		script(src='/guest/js/jquery.min.js')
		script(src='/guest/js/tether.min.js')
		script(src='/guest/js/bootstrap.min.js')
		script(src='/guest/js/owl.carousel.min.js')
		script(src='/guest/js/jquery.mixitup.js')
