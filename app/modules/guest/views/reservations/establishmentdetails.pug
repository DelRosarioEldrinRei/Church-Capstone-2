extends ../../../../templates/guests
block main
	.profile-page
		#heading-page.page-header.header-filter(data-parallax="true" style="background-image: url('/img/Nave.jpeg');")
		#raised-section.main.main-raised
			.container
					.row
						.col-md-12.my-3
							h3.text-center.text-uppercase.guidelines--text House Blessing Details
							form(action=`/guest/reservation/${details.int_eventinfoID}/edit` method="post")
									
									input.form-control(type='hidden' name='userID' value=`${user.int_userID}`)
									input.form-control(type='hidden' name='eventname' value=`${details.var_eventname }`)
									fieldset
											h4
											.row
													.col-md-6.px-lg-3.px-md-3.px-sm-0
															.form-group
																	h6.label-control Owner
																	input.form-control(type='text' name='owner' placeholder="Ex. Juan Dela Cruz" required='' pattern="[A-Za-z, ]{2,}" value=`${moredetails.var_owner}` )
																	.help-block.with-errors
													.col-md-6.px-lg-3.px-md-3.px-sm-0
															.form-group
																	h6.label-control Establishment Location
																	input.form-control(type='text' name='location' placeholder="Ex. Caloocan, Quezon City" required='' pattern="[A-Za-z,.- ]{2,}" value=`${moredetails.var_estloc}` )
																	.help-block.with-errors
											
											.row
													.col-md-6.px-lg-3.px-md-3.px-sm-0
															.form-group
																	h6.label-control Contact Number
																	input.form-control(type='text' name='contactnumber' placeholder="Ex. Juan Dela Cruz" required='' pattern="[0-9, ]{11}" value=`${moredetails.var_ownercontactnum}` )
																	.help-block.with-errors
													.col-md-6.px-lg-3.px-md-3.px-sm-0
															.form-group
																	h6.label-control Email
																	input.form-control(type='text' name='email'  required='' value=`${moredetails.var_owneremailadd}` )
																	.help-block.with-errors
											//- .learn-more.pull-right
											//- 	//- button.btn.std-btn.btn-secondary.btn-previous.m-0(type='button') Prev
											//- 	button.btn.btn-submit(type='submit') Submit
								
