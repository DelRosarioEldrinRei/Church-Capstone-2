extends ../../../../templates/guests
block main
	.profile-page
		//- Heading Page
		#heading-page.page-header.header-filter(data-parallax="true" style="background-image: url('/img/Nave.png');")
			.container
				.row
					.col-md-9.main-header__textbox
						h1.font-italic Reservations
		#raised-section.main.main-raised
			.container
				.row
					.col-md-12
						hr.mt-5.mx-5
				.row
					.col-md-12.my-3
						h3.text-left.text-uppercase.guidelines--text Reservation Lists
				.row
					.col-md-12.my-3
						table.table
							thead
								tr.text-center
									th.text-center Reservation ID
									th Name
									th Status
									th Actions
							tbody
								each reservation in reservations
									tr.text-center
										td.text-center=reservation.int_eventinfoID
										td=reservation.var_eventname
										td=reservation.char_approvalstatus
										td.td-actions
											//- a(href=`/guest/reservation/${reservation.int_eventinfoID}` style= 'margin-left: 3px') VIEW
											//- a(href=`/guest/reservation/${reservation.int_eventinfoID}/cancel` style= 'margin-left: 8px') CANCEL

											button.btn.btn-danger.deleteButton(type='button',rel='tooltip',value=`${reservation.int_eventinfoID}`) Cancel
												//- i.material-icons close
											button.btn.btn-success.updateButton(type='button',rel='tooltip', value=`${reservation.int_eventinfoID}`) Edit
												//- i.material-icons edit
					
