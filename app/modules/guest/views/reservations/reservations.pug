		.btn-sm {
			font-size: 12px;
			min-width: 40px;
			padding: 5px 11px;
		}
	#headers
		#header-style-1
			.container
				.header-caption
					.row
						.col-md-12.header-content
							h3.header-title.animated.fadeInDown.invisible
