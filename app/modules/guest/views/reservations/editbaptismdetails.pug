extends ../../../../templates/guests
block main
	.profile-page
		#heading-page.page-header.header-filter(data-parallax="true" style="background-image: url('/img/Nave.jpeg');")
		#raised-section.main.main-raised
			.container
					.row
						.col-md-12.my-3
							h3.text-center.text-uppercase.guidelines--text Baptism Details
							form(action=`/guest/reservation/${details.int_eventinfoID}/edit` method="post")
									input.form-control(type='hidden' name='userID' value=`${user.int_userID}`)
									input.form-control(type='hidden' name='eventname' value=`${details.var_eventname }`)
									
									fieldset
										h6.label-control Name of the Child:
										.row
												.col-md-4.px-lg-3.px-md-0.px-sm-0
														.form-group.pt-0
																input.form-control(type='text' placeholder="Last Name" name='lastname' required='' pattern="[A-Za-z ]{2,}" value=`${moredetails.var_lname}` )
																.help-block.with-errors
												.col-md-4.p-lg-0.px-md-3.px-sm-0
														.form-group.pt-0
																input.form-control(type='text' placeholder="First Name" name='firstname' required='' pattern="[A-Za-z ]{2,}" value=`${moredetails.var_fname}`)
																.help-block.with-errors
												.col-md-4.px-lg-3.px-md-0.px-sm-0
														.form-group.pt-0
																input.form-control(type='text' placeholder="Middle Name" name='middlename' pattern="[A-Za-z ]{2,}" value=`${moredetails.var_mname}`)
																.help-block.with-errors
										.row
												.col-md-4.px-lg-3.px-md-0.px-sm-0
														.form-group.pt-0
