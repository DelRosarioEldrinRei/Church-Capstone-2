extends ../../../../templates/masterguests
block main
	.profile-page
		//- Heading Page
		#heading-page.page-header.header-filter(data-parallax="true" style="background-image: url('/img/Nave.jpeg');")
			.container
				.row
					.col-md-9.main-header__textbox
						h1.font-italic Second Floor
						a(href="/guest/facilities/secondfloor")
							p.text-uppercase.card-desc
								| Guidelines | Requirements
		#raised-section.main.main-raised
			.container
				.row
					.col-md-12
						hr.mt-5.mx-5
				.row
					.col-md-12.my-3
						h3.text-center.text-uppercase.guidelines--text Reservation Form
				.row
					.col-md-7.my-3
						#form-facility
							#calendar
					.col-md-5.my-3.text-center
						form(action="/guest/facilities/secondfloor/form" enctype="multipart/form-data" method='post')
							input.form-control(type='hidden' name='userID' value=`${user.int_userID}`)
							.form-group
								label.label-control Event
								input.form-control(type='text' name= 'event')
							.form-group
								label.label-control Desired Date
								input.datepicker2.form-control(type='date' name='desireddate')
							.form-group
								label.label-control Start Time
								input.timepicker.form-control(type='text' name='starttime')
							.form-group
								label.label-control End Time
								input.timepicker.form-control(type='text' name='endtime')
							.form-group.form-file-upload.form-file-multiple.p-0
								input.inputFileHidden(type='file', multiple='')
								.input-group
									input.form-control.inputFileVisible(type='text', placeholder='Valid ID')
									span.input-group-btn
										button.btn.btn-fab.btn-round.btn-primary(type='button')
											i.fa.fa-file(aria-hidden='true')
							.form-group.form-file-upload.form-file-multiple
								.fileinput.fileinput-new.text-center(data-provides='fileinput')
									.fileinput-new.thumbnail.img-no-padding(style='max-width: 400px; max-height: 250px;')
										img(src='/img/image_holder.png', alt='...')
									.fileinput-preview.fileinput-exists.thumbnail.img-no-padding(style='max-width: 400px; max-height: 250px;')
									div
										span.btn.btn-default.btn-file.btn-round
											span.fileinput-new 
												i.fa.fa-cloud-upload
											span.fileinput-exists Change
											input(type='file', name='image' accept='image/*' required)
										a.btn.btn-link.btn-danger.fileinput-exists.btn-round(href='javascript:void(0)', data-dismiss='fileinput')
											i.fa.fa-times
											|  Remove
							.row
								.col-md-12.text-center.mb-5
									//- button.btn.btn-primary.btn-valid Submit
									button.btn.btn-primary(type='submit') Submit

	#myModal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='exampleModalLabel', aria-hidden='true')
		.modal-dialog(role='document')
			.modal-content
				.modal-header
					button.close(type='button', data-dismiss='modal', aria-label='Close')
						span(aria-hidden='true') Ã—
				.modal-body
					#calendar1
