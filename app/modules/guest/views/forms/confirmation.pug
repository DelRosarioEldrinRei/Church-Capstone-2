							fieldset
								h4
									.d-none.d-sm-inline Sponsors Information:
									span Step 3 - 3
									h6.label-control Principal Sponsors
										.row#principalSponsor
											.col-md-6.px-lg-3.px-md-3.px-sm-0
												.form-group.m-0
