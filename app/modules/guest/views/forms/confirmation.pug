											.col-md-4.p-lg-0.px-md-3.px-sm-0
												.form-group.pt-0
													input.form-control(type='text' placeholder="First Name" name='firstname' required='' pattern="[A-Za-z ]{2,}")
													.help-block.with-errors
											.col-md-4.px-lg-3.px-md-0.px-sm-0
												.form-group.pt-0
													input.form-control(type='text' placeholder="Middle Name" name='middlename' required='' pattern="[A-Za-z ]{2,}")
