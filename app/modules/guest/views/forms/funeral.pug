extends ../../../../templates/guests
block main
	style.
		@media screen and (max-width: 576px) {
			.col-md-4, .col-md-6, .col-md-9 {
					padding-left: 0;
					padding-right: 0;
			}
			.form-wizard-step {
					padding-bottom: 10px !important;
			}
		}
		#header-style-1 {
			background-image: url(/imgchurch/funeral.jpg)
		}
		.form-wizard-tolal-steps-3 .form-wizard-step {
			width: 49.33%;
		}
	#headers
		#header-style-1
			.container
				.header-caption
					.row
						.col-md-12.header-content
							h3.header-title.animated.fadeInDown.invisible
								span.text-primary Helium -
								| Bootstrap 4 UI Kit
							h5.header-text.animated.fadeIn.invisible
								| Lorem ipsum dolor sit amet, consectetuer adipiscing elit<br>Lorem ipsum dolor sit amet, consectetuer.</h5>
							//- a.page-scroll.btn.btn-lg.btn-default-filled.animated.fadeInUp.invisible(href="#") Download Now
							//- a.page-scroll.btn.btn-lg.btn-common.animated.fadeInUp.invisible(href="#") Explore
		#raised-section.main.main-raised
			section.form-box
				.container
					.row
						.col-md-12.form-wizard
							// Form Wizard
							form(action="/guest/funeral/form" enctype="multipart/form-data" method="post")
								h3 Funeral Blessing Form
								p.mb-2 Fill all form fields
								.form-wizard-steps.form-wizard-tolal-steps-3
									.form-wizard-progress
											.form-wizard-progress-line(data-now-value='12.25' data-number-of-steps='3' style='width: 12.25%;')
									// Step 1
									.form-wizard-step.active
											.form-wizard-step-icon
													i.fa.fa-user(aria-hidden='true')
											p.d-none.d-sm-block Schedule Date
									// Step 1
									// Step 2
									.form-wizard-step
											.form-wizard-step-icon
													i.fa.fa-location-arrow(aria-hidden='true')
											p.d-none.d-sm-block Blessing Details
									// Step 2
								// Form Step 1
								fieldset
									h4
										.d-none.d-sm-inline Schedule Date: 
										span Step 1 - 2
										h6.label-control.text-lg-center.text-sm-left Desired Date
										.row
											.col-md-6.mx-lg-auto.mx-sm-left.my-lg-auto.my-sm-left.text-lg-center.text-sm-left
												.form-group
													input.datepicker.form-control(type='date' name='desireddate')
										.row
											.col-md-12.text-lg-center.text-sm-left
												.form-group
													h6.label-control Desired Time
														br
														select.ml-lg-2.mt-lg-2(type="text" name='desiredtime')
															option 10:00AM
															option 11:00AM
															option 1:00PM
															option 2:00PM
										.learn-more.pull-right
													button.btn.btn-next(type='button') Next
								// Form Step 1
								// Form Step 2
								fieldset
									h4
										.d-none.d-sm-inline Blessing Details:
										span Step 2 - 2
										input.form-control(type='hidden' name='userID' value=`${user.int_userID}`)
										h6.label-control Name of the deceased:
										.row
											.col-md-4.px-lg-3.px-md-0.px-sm-0
												.form-group.pt-0
													input.form-control(type='text' placeholder="Last Name" name='lastname' required='' pattern="[A-Za-z]{2,}" )
													.help-block.with-errors
											.col-md-4.p-lg-0.px-md-3.px-sm-0
												.form-group.pt-0
													input.form-control(type='text' placeholder="First Name" name='firstname' required='' pattern="[A-Za-z]{2,}" )
													.help-block.with-errors
											.col-md-4.px-lg-3.px-md-0.px-sm-0
												.form-group.pt-0
													input.form-control(type='text' placeholder="Middle Name" name='middlename')
													.help-block.with-errors
										.row
											.col-md-4.px-lg-3.px-md-0.px-sm-0
												.form-group.m-0
													h6.label-control Gender:
														.form-check.ml-3
															label.form-check-label
																input.form-check-input(type="radio" name="gender" id="exampleRadios2" value="Male" checked)
																| Male
																span.circle
																	span.check
														.form-check
															label.form-check-label.ml-3
																input.form-check-input(type="radio" name="gender" id="exampleRadios2" value="Female")
																| Female
																span.circle
																	span.check
											.col-md-4.p-lg-0.px-md-3.px-sm-0
												.form-group
													h6.label-control Birthday
													input.datepicker.form-control(type='date' name='birthday' required='')
											.col-md-4.px-lg-3.px-md-0.px-sm-0
												.form-group
													h6.label-control Birthplace:
													input.form-control(type='text' name='birthplace' placeholder="Ex. Payatas, Quezon City" required='' pattern="[A-Za-z0-9.,-]{2,}" )
													.help-block.with-errors
										.row
											.col-md-4.px-lg-3.px-md-0.px-sm-0
												.form-group
													h6.label-control Relationship with the Deceased
													select(type="text" name='relation' required)
														option Spouse
														option Parent
														option Child
														option Grandparent
														option Grandchild
														option Aunt/Uncle
														option Nephew/Niece
														option BF/GF
														option Friend
											.col-md-8.pl-lg-0.px-md-0.pl-md-3.px-sm-0
												.form-group
													h6(for='exampleFormControlTextarea1') Address:
													textarea#exampleFormControlTextarea1.form-control(rows='2' name='address' placeholder="Ex. Urban, Bgy. Payatas B 1119 QC" required='' pattern="[A-Za-z0-9,.-]{2,}" )
											//- .col-md-4.p-lg-0.px-md-3.px-sm-0
											//- 	.form-group
											//- 		h6.label-control Desired Date
											//- 		input.datepicker.FBlessingDesiredDate.form-control(type='date' name='desireddate')
											//- .col-md-4.px-lg-3.px-md-0.px-sm-0
											//- 	.form-group
											//- 		h6.label-control Desired Time
											//- 		input.timepicker.form-control(type='text' name='desiredtime')
											.help-block.with-errors
										.row
											.col-md-4.px-lg-3.px-md-0.px-sm-0
												.form-group
													label.label-control Place where the will happen:
													.ml-4
														.form-check
															label.form-check-label
																input.form-check-input(type="radio" name="venue" id="exampleRadios1" value="sameaddress" checked)
																| Same as his/her address
																span.circle
																	span.check
														.form-check
															label.form-check-label
																input#radioup.form-check-input(type="radio" name="venue" value="INLPP")
																| INLPP
																span.circle
																	span.check
														.form-check
															label.form-check-label
																input#exampleRadios3.form-check-input(type="radio" name="venue" value="other")
																.dropdown-toggle.mr-3 Other
																span.circle
																	span.check
											.col-md-8.px-lg-3.px-md-3.px-sm-0
												.row
													.col-md-12.px-lg-0.px-md-0.px-sm-0
												.row
													.col-md-6.p-lg-0.px-md-3.px-sm-0
														.form-group
															h6.label-control Desired Date
															input.datepicker.FBlessingDesiredDate.form-control(type='date' name='desireddate')
													.col-md-6.pl-lg-3.px-md-0.px-sm-0
														.form-group
															h6.label-control Desired Time
															input.timepicker.form-control(type='text' name='desiredtime')
															//- .help-block.with-errors
													//- .col-md-6.mt-2.px-lg-3.px-md-3.px-sm-3
													//- 	h6.label-control Birth Certificate
													//- 	input(type='file', name='birthCertificate' accept='image/*' required)
													//- .col-md-6.mt-2.px-lg-3.px-md-3.px-sm-3.mb-2
													//- 	h6.label-control Death Certificate
													//- 	input(type='file', name='deathCertificate' accept='image/*' required)
										.row
											//- .col-lg-6.col-md-12.px-lg-0.px-md-3.px-sm-0
											.col-lg-6.col-md-12.px-lg-0.px-md-3.px-sm-0
												#textarea2.form-group
													h6.label-control Enter Complete Address
													textarea.form-control(placeholder="Ex. Urban, Bgy. Payatas B 1119 QC" rows="2" name='othervenue')
												.form-group
													h6.label-control Cause of Death:
													textarea#exampleFormControlTextarea2.form-control(rows='3' name='details' placeholder="Please enter the cause of death")
											.col-md-6.px-lg-3.px-md-3.px-sm-0
												.form-group
													h6.label-control Birth Certificate
													input#file-0b.file(type='file',accept='image/*',name="image")

													//- .col-md-6.mt-2.px-lg-3.px-md-3.px-sm-0
													//- 	h6.label-control Death Certificate
													//- 	input(type='file', name='deathCertificate' accept='image/*' required)
									.learn-more.pull-right
										button.btn.std-btn.btn-secondary.btn-previous.m-0(type='button') Prev
										button.btn.btn-submit(type='submit') Submit
block addjs
	script.
		$('#textarea1').hide();
		$('#textarea2').hide();
		$('#radioup').click(function() {
			$('#textarea1').slideUp();
			$('#textarea2').slideUp();
		});
		$('#exampleRadios1').click(function() {
			$('#textarea1').slideDown();
			$('#textarea2').slideUp();
		});
		$('#exampleRadios3').click(function() {
			$('#textarea1').slideUp();
			$('#textarea2').slideDown();
		});
