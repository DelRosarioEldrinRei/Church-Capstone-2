			$('#file-0b').val() != '' &&
			$('#file-0b').val() != undefined
				){
					var idNow = $(this).val();
					console.log(idNow)
					$.post('/guest/anointing/query',{
						firstname: $('#firstname').val(),id:idNow
					}).done(data=>{
						if($('#customRadio1').prop("checked")){
							gender= $('#customRadio1').val()
						}
						if($('#customRadio2').prop("checked")){
							gender= $('#customRadio2').val()
						}
						if($('#sameaddress').prop("checked")){
							venue= data.firstQuery.var_useraddress
						}
						if($("#exampleRadios1").prop("checked")){
							venue= $('#hospitalname').val()
						}
						if($("#exampleRadios3").prop("checked")){
							venue= $('#othervenue').val()
						}
							var formData= new FormData();
							formData.append('desireddate1', eventDate),
							formData.append('desiredtime1', timeStart),
							formData.append('userID', $('#userID').val()),
							formData.append('lastname', $('#lastname').val()),
							formData.append('firstname', $('#firstname').val()),
							formData.append('middlename', $('#middlename').val()),
							formData.append('gender', gender),
							formData.append('venue', venue),
							formData.append('birthday', $('#birthday').val()),
							formData.append('birthplace', $('#birthplace').val()),
							formData.append('address', $('#address').val()),
							formData.append('details', $('#details').val()),
							formData.append('relation', $('#relation').val()),
							formData.append('image', $('#file-0b')[0].files[0]);
						$.ajax({
							type: 'POST',
							url: '/guest/anointing/form',
							data: formData,
							processData:false,
							contentType:false,
							success: function(data){
								console.log(formData)
								$('#viewModal').modal('show');
								console.log(data.int_voucherID)
							}

						})

					})
				}
				else{
					swal({
						title: "Form is not completed yet",
						text: "Please fill out all the required fields",
						type: 'warning',
						confirmButtonColor: '#3085d6',
						confirmButtonText: 'OK'
					})
				}
				})		

