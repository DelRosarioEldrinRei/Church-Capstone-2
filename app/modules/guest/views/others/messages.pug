  script.
    $(document).ready(function() {

      $('.compose').click(function(){
        $('.mesgs').fadeOut(function(){
          $('.mesgs_compose').fadeIn('slow');
        });
      });

      $('.composeClose').click(function(){
        $('.mesgs_compose').fadeOut(function(){
          $('.mesgs').fadeIn('slow');
        });
      });

      $('.sent').click(function(){
        $(this).css({'font-weight': '700', 'cursor': 'default'});
        $('.inbox').css({'font-weight': '500', 'cursor': 'pointer'})

        $('.inbox_chat').css('display', 'none');
        $('.sent_messages').css('display', 'block');
      });

      $('.inbox').click(function(){
        $(this).css({'font-weight': '700', 'cursor': 'default'});
        $('.sent').css({'font-weight': '500', 'cursor': 'pointer'})
        
        $('.sent_messages').css('display', 'none');
        $('.inbox_chat').css('display', 'block');
      });

    });
