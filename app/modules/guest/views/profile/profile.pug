		$(document).ready(function() {
			
			$('.changePassword').click(function(){
				var id= $(this).val()
				console.log('ito yung id bro')
				console.log(id)
					$.post('/guest/profile/query',{id:id}).done(data=>{
					$('#updateAppend').append(`
					<div class="form-group">
						<label class="label-control">Current Password</label>
						<input type="text" id="currpass" class="form-control" value="${data.var_password}"/>
					</div>
					<div class="form-group">
						<label class="label-control">New Password</label>
						<input type='text' id="newpass" class="form-control">
					</div>
					</div>
					`)
					$('#updateModal').modal('show')
					$('#updateModal').on('hidden.bs.modal',function(){
						$('#updateAppend').empty()
					})
					$('#cancelButton').click(function(){
						$('#updateAppend').empty();
					})
					$(document).keyup(function(e) {
					if (e.keyCode === 27) 
						{
						$('#updateModal').modal('hide');
						$('#updateAppend').empty();
						};
					});
					$('#updateSubmitButton').click(function(){
						$.post('/admin/maintenance-document-requirements/edit',{
						reqname:$('#reqname').val(),
						reqdesc:$('#reqdesc').val(),
						id:idNow
						})
						.done(data=>{
							if(data){
