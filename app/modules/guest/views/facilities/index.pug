extends ../../../../templates/guests
block main
	#headers
		#header-style-1
			.container
				.header-caption
					.row
						.col-md-12.header-content
							h3.header-title.animated.fadeInDown.invisible
								span.text-primary Helium - 
								| Bootstrap 4 UI Kit
							h5.header-text.animated.fadeIn.invisible
								| Lorem ipsum dolor sit amet, consectetuer adipiscing elit<br>Lorem ipsum dolor sit amet, consectetuer.</h5>
							//- a.page-scroll.btn.btn-lg.btn-default-filled.animated.fadeInUp.invisible(href="#") Download Now
							//- a.page-scroll.btn.btn-lg.btn-common.animated.fadeInUp.invisible(href="#") Explore
		#raised-section.main.main-raised
			section.form-box
				.container
					.row
						.col-md-12.form-wizard
							h3 Facility Reservation
							p Choose a facility to reserve
			.container
				.row
					each facility in facilities
						.col-md-6
							.card-2.shadow2
								.image
									//- img(src='/img/facility/facility_1.jpg')
									img(alt=`${facility.var_facilityname}`, src=`${facility.var_facilitypicpath}`)
								.card-block
									h3.card-title=facility.var_facilityname
									.meta
										a Recommended
									.description
										.row
											.col-md-4
												span
													strong Rate: 
											.col-md-8
												.row
													span="₱"+facility.double_fee+ "(for the first "+ (facility.time_feeper) +"hr(s))"
												.row
													span="₱"+facility.double_addrate + "/"+ (facility.time_addper) +"hr(s)"
										.row
											.col-md-4
												span
													strong Ideal For: 
											.col-md-8
												.row
													span=facility.var_facilitydesc
										.row
											.col-md-4
												span
													strong Size:
											.col-md-8
												.row
													span=facility.var_facilitysize
								.card-footer.p-0
									.extra.p-3
										.learn-more.text-center
											//- a.btn.btn-common.ml-auto.mx-auto#submitButton(type = 'button' value ='1') Inquire
											//- a.btn.btn-primary#submitButton(type='submit' value=`${facility.int_facilityID}`) Inquire
											button.btn.btn-primary.actionButton(type='button' value=`${facility.int_facilityID}`) Inquire
												
									
					
block addjs
	script(type='text/javascript').
		
		$(document).ready(function(){
			var idNow;
			$('.actionButton').click(function(){
				idNow = $(this).val();
				console.log(idNow)
				window.location=`/guest/facilities/form?id=${idNow}`
				})
						
				})		
