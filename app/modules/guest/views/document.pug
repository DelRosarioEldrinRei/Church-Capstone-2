extends ../../../templates/masterguests
mixin card(bgcolor,margin,icon,title,text)
	.col-md-4.px-1
		a(href="#")
			.card.text-center.p-2.shadow(class=`bg-${bgcolor} ${margin}`)
				.card-body.px-2
					i(class=`fa fa-${icon}`)
					h3.mb-2.card-title.text-uppercase= title
					p.card-text.text-uppercase
						| Guidelines & Requirements
					p.card-text.text-uppercase
						| Inquire
mixin testimony(quote,credits,from)
	div
		blockquote.blockquote.mx-5.px-5
			p.mb-0= quote
			footer.blockquote-footer.text-left=credits
				cite(title="company")= from
