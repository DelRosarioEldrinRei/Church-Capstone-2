extends ../../../templates/priest
block main
	#raised-section.main.main-raised
		section.form-box
			.container
				.row
					.col-md-12.form-wizard
						h1.font-weight-bold Appointments
						h4.font-weight-bold
				.row
					.table-responsive
						table.table.text-center
							thead
								tr
									th #
									th Event Type
									th Parishioner
									th Schedule
									th Venue
									th Actions
							tbody
								each reservation in reservations
									tr.text-center
										td=reservation.int_eventinfoID
										td=reservation.var_eventname
										td=reservation.varName
										td=reservation.date_approveddate
										td=reservation.location
										td.td-actions
											button(type="button" data-toggle="modal" data-target="#exampleModal").btn.btn-primary.btn-sm
												| View
											| &nbsp;
											button.confirmButton(type="button").btn.btn-success.btn-sm
												| Confirm
								
	#exampleModal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='exampleModalLabel', aria-hidden='true')
		.modal-dialog(role='document')
			.modal-content
				.modal-header
					h5#exampleModalLabel.modal-title Event Description
					button.close(type='button', data-dismiss='modal', aria-label='Close')
						span(aria-hidden='true') ×
				.modal-body
					label.h5 Name: &nbsp;
					label Juan Dela Cruz
					br
					label.h5 Venue: &nbsp;
					label 212 Molave St. Payatas B Quezon City
					br
					label.h5 Schedule: &nbsp;
					label September 10, 2018
				.modal-footer
					button.btn.btn-secondary(type='button', data-dismiss='modal') Close
block addjs
	script.
		$(document).ready(function() {
			$('.confirmButton').click(function(){
				swal({
					title: 'Can you attend this event?',
					//- text: "Please choose",
					type: 'info',
					showCancelButton: true,
					confirmButtonColor: '#3085d6',
					cancelButtonColor: '#d33',
					cancelButtonText: 'No',
					confirmButtonText: 'Yes',
				}).then((result) => {
					if (result.value) {
						swal(
							'Deleted!',
							'Your file has been deleted.',
							'success'
						)
					}
				})
			})
		});
