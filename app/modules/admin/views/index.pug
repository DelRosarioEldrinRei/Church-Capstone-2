					.layers.shadow
						.layer.w-100.pX-20.pT-20
							h5.lh-1 Marriage
						.layer.w-100.p-20
							canvas#canvas3(height='150')
			.masonry-item.col-md-6
				// #Monthly Stats ====================
				.bd.bgc-white
