doctype html
html
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')
    title Sign In
    link(href='/css/loader.css', rel='stylesheet')
    link(href='/admin/style.css', rel='stylesheet')
  body.app
    #loader
      .spinner
    #wrapper
      .peers.ai-s.fxw-nw.h-100vh
        .peer.peer-greed.h-100.pos-r.bgr-n.bgpX-c.bgpY-c.bgsz-cv(class='d-n@sm-', style='background-image: url("/admin/assets/static/images/bg.jpg")')
          .pos-a.centerXY
            .bgc-white.bdrs-50p.pos-r(style='width: 120px; height: 120px;')
              img.pos-a.centerXY(src='/admin/assets/static/images/logo.png', alt='')
        .col-12.col-md-4.peer.pX-40.pY-80.h-100.bgc-white.scrollable.pos-r(style='min-width: 320px;')
          h3.c-grey-900.mB-40 Login
          form#needs-validation.form(method='POST', action='/login' novalidate)
            .form-group
              label.h6.text-normal.text-dark Username
              input.form-control(type='string', name='user_username' placeholder='Username...' required)
              .invalid-feedback Please enter your username.
            .form-group
              label.h6.text-normal.text-dark Password
              input.form-control(type='password', name='user_password' placeholder='Password...' required)
              .invalid-feedback Please enter your password.
            .form-group
              .peers.ai-c.jc-sb.fxw-nw
                .peer
                  a.peer.peer-greed(href="#") Don't have an account? Sign-up
                  //- .checkbox.checkbox-circle.checkbox-info.peers.ai-c
                  //-   input#inputCall1.peer(type='checkbox', name='inputCheckboxesCall')
                  //-   label.peers.peer-greed.js-sb.ai-c(for='inputCall1')
                .peer
                  button.btn.btn-primary(type="submit") Login
          a.peer.peer-greed.mt-5.pt-5.text-center(href="/")
            i.ti-arrow-left
            |  Go Back
  script(type='text/javascript', src='/js/jquery.min.js')
  script(type='text/javascript', src='/admin/vendor.js')
  script(type='text/javascript', src='/admin/bundle.js')
  script(type='text/javascript', src='/js/loader.js')
  script.
    (function() {
      'use strict';

      window.addEventListener('load', function() {
        var form = document.getElementById('needs-validation');
        form.addEventListener('submit', function(event) {
          if (form.checkValidity() === false) {
            event.preventDefault();
            event.stopPropagation();
          }
          form.classList.add('was-validated');
        }, false);
      }, false);
    })();
