extends ../../../../../templates/secretariat
block prepend main
	#wrap
	//- #calendar
	div(style='clear:both')
	.content
		.container-fluid
			.row
				.col-lg-12.col-md-12
					// Tab panes
					.tab-content
						#nonwedding.tab-pane.active.mx-3
							br
							// Inner Nav tabs
							ul.nav.nav-tabs
								li.nav-item
									a.nav-link.active(data-toggle='tab', href='#regconfirmation') Regular Confirmation
								li.nav-item
									a.nav-link(data-toggle='tab', href='#specconfirmation') Special Confirmation
							// Tab panes
							.tab-content
								#regconfirmation.tab-pane.active
									.card
											.card-header.card-header-primary
													h4.card-title Regular Confirmation
													
											.card-body.table-responsive
													table.table.dataTable.table-hover
															thead.text-primary
																	th ID
																	th Name of the Child
																	th Birthday
																	th Req Status
																	th Pymt Status
																	th Approval Status
																	th.text-center(style=" width:11rem") Actions
															tbody
																	each regular in regulars
																		tr
																			td=regular.int_eventinfoID
																			td=regular.var_lname + ", " + regular.var_fname
																			td=regular.date_birthday
																			td=regular.char_reqstatus
																			td=regular.char_feestatus
																			td=regular.char_approvalstatus
																			<td class="td-actions text-right">
																					a.button(rel="tooltip" class="btn btn-info" href=`/admin/transaction-confirmation`)
																							<i class="material-icons">open_in_new</i>
																					a.button(rel="tooltip" class="btn btn-success" href=`/admin/transaction-confirmation/edit/${regular.int_eventinfoID}`)
																							<i class="material-icons">edit</i>
																					//- a.button(rel="tooltip" class="btn btn-danger" href=`/admin/transaction-confirmation/delete/${request.int_requestID}`)
																					//- 		<i class="material-icons">close</i>
																			</td>	
								#specconfirmation.tab-pane.fade
									.card
											.card-header.card-header-primary
													h4.card-title Special Confirmation
													
											.card-body.table-responsive
													table.table.dataTable.table-hover
															thead.text-primary
																	th ID
																	th Name of the Child
																	th Birthday
																	th Req Status
																	th Pymt Status
																	th Approval Status
																	th.text-right(style=" width:120px") Actions
															tbody
																	each special in specials
																		tr
																			td=special.int_eventinfoID
																			td=special.var_lname + ", " + special.var_fname
																			td=special.date_birthday
																			td=special.char_reqstatus
																			td=special.char_feestatus
																			td=special.char_approvalstatus
																			<td class="td-actions text-right">
																					a.button(rel="tooltip" class="btn btn-info" href=`/admin/transaction-confirmation`)
																							<i class="material-icons">open_in_new</i>
																					a.button(rel="tooltip" class="btn btn-success" href=`/admin/transaction-confirmation/edit/${special.int_eventinfoID}`)
																							<i class="material-icons">edit</i>
																					//- a.button(rel="tooltip" class="btn btn-danger" href=`/admin/transaction-baptism/delete/${request.int_requestID}`)
																					//- 		<i class="material-icons">close</i>
																			</td>	
