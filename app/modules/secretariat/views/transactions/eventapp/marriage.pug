	script.
		$(document).ready(function() {
			$('.actionButton').click(function(){
			idNow = $(this).val();
			console.log(idNow)
			})
			$('.updateButton').click(function(){
				console.log(idNow)
				$.post('/secretariat/transaction-marriage/query/update',{id:idNow}).done(data =>{
					console.log(data.requirements)
					$('#updateBodyAppend').append(`
