block prepend main
	#wrap
	//- #calendar
	div(style='clear:both')
	.content
		.container-fluid
			//- <div class="alert alert-warning" role="alert">
			//- 	| <cite>Note:</cite> Deadline for sumbission of requirements will be on <u><cite> June 20, 2018</u></cite>
			//- </div>
			
			.row
				.col-lg-12.col-md-12
						.card
								.card-header.card-header-primary
										h4.card-title Marriage Application
										
								.card-body.table-responsive
										table.table.table-hover
												thead.text-primary
														th ID
														th Groom
														th Bride
														th Desired Schedule
														th Type
														th Approval Status
														th.text-center(style=" width:120px") Actions
												tbody
														each marriage in marriages
															tr
																td=marriage.int_eventinfoID
																td=marriage.var_lname + ", " + marriage.var_fname
																td=marriage.var_blname + ", " + marriage.var_bfname
																td=marriage.date_desireddate + ' ' + marriage.time_desiredtime
																td=marriage.char_weddingtype
																td=marriage.char_approvalstatus
																<td class="td-actions text-right">
																		a.button(rel="tooltip" class="btn btn-info" href=`/admin/transaction-baptism`)
																				<i class="material-icons">open_in_new</i>
																		a.button(rel="tooltip" class="btn btn-success" href=`/admin/transaction-baptism/edit/${marriage.int_eventinfoID}`)
																				<i class="material-icons">edit</i>
																		//- a.button(rel="tooltip" class="btn btn-danger" href=`/admin/transaction-baptism/delete/${request.int_requestID}`)
																		//- 		<i class="material-icons">close</i>
																</td>	
															
								.card-footer.text-right
									.col-md-7
										<cite title="Source Title">Showing 6 of 25 entries</cite> 
									.col-md-6.text-right
										<nav aria-label="Page navigation example">
											<ul class="pagination justify-content-center">
												<li class="page-item">
													<a class="page-link" href="#" tabindex="-1">Previous</a>
												</li>
												<li class="page-item"><a class="page-link" href="#">1</a></li>
												<li class="page-item">
													<a class="page-link" href="#">Next</a>
												</li>
											</ul>
										</nav>

			.row
				.col-md-8
					<div class="card card-nav-tabs">
						<div class="card-body">
							<blockquote class="blockquote mb-0">
								//- <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Integer posuere erat a ante.</p>
