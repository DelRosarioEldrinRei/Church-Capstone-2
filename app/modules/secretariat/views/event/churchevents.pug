extends ../../../../templates/mastersecretary	

block prepend main
	.content
		.container-fluid
			.row
				.col-md-12
					.card.strpied-tabled-with-hover
						.card-header
							h4.card-title
								i.nc-icon.nc-notes
								|  Church Events
						table.table.table-hover.table-striped
								thead
									tr.text-center
										th ID
										th Event Applicant
										th Event Name
										th Payment Status
										th Requirements Status
										th Update
								each event in events
									tbody
										tr
											td="2018-"+ event.int_eventID+"MN-0"
											td Joshua Rae Macaya
											td=event.var_eventname
											td Paid
											td Approved
											td: a(href="#" data-toggle="modal" data-target="#sacraments")
												i.fa.fa-pencil-square-o(aria-hidden='true')
						.card-body.table-full-width.table-responsive
		.container.d-flex.flex-row.justify-content-end
			button.btn.btn-primary.btn-fill.m-2(data-toggle="modal" data-target="#sacraments") Add New Sacrament
			#sacraments.modal.fade
				.modal-dialog
					.modal-content
						.modal-header
							h5#loginModalLabel.modal-title.font-weight-bold Church Event
							button.close(data-dismiss='modal') Ã—
						.modal-body
							form
								.row
									.col-12
										.form-group
											label.text-muted Event Name
											label.form-control Baptism
								.row
									.col-md-6
										.form-group
											label.text-muted Date
											.input-group
												label.form-control May 23, 2018
									.col-md-12
										.form-group
											label.text-muted Where
											input.form-control(type='text', placeholder='Metro Manila', value='')
								.row
									.col-md-6
										.form-group
											label.text-muted Payment Status
											.input-group
												label.form-control keme
									.col-md-6
										.form-group
											label.text-muted Requirements Status
											.input-group
												label.form-control keme
								.container.d-flex.justify-content-end.m-3
									button.m-1.btn.btn-primary.btn-fill Update
									button.m-1.btn.btn-secondary.btn-fill(data-dismiss='modal') Close